<div class="navbar">
    <div>
     <a href="/">MembersOnly</a>
    </div>
    <div>
        <%if(!locals.user){%>
        <a href="/users/login">Login</a>
        <%}%>
    </div>
    <div>
        <%if(!locals.user){%>
        <a href="/users/create">Signup</a>
        <%}%>
    </div>
    <div>
        <%if(locals.user){%>
        <a href="/post/create">Create Post</a>
        <%}%>
    </div>
    <div id="dropdown" >
        <%= locals.user ? user.username : 'guest' %>
        
        <%if(locals.user){%>
            <div id="dropdown-content" class="dropdown-content">
                <a href="/log-out">Logout</a>
            </div>
       <%}%>
    </div>
  </div>
  
  <style>
      .navbar a {
          text-decoration: none;
          color: inherit;
          text-transform: uppercase;
      }
    .navbar{
    display: grid;
    grid-template-columns: 6fr 1fr 1fr 1fr 1fr;
    grid-gap: 15px;
    background: rgba(0, 0, 0, 0.685);
    color: white;
    padding: 20px 5px;
    }
    .dropdown {
    position: relative;
    display: inline-block;
    }
    .dropdown-content {
    display: none;
    position: absolute;
    background-color: #353535;
    color: white;
    width: inherit;
    box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
    padding: 5px;
    z-index: 1;
    }

    .dropdown:hover .dropdown-content {
    display: block;
    }
  </style>
  <script>
      document.getElementById("dropdown").addEventListener('mouseover',e=>{
	document.getElementById('dropdown-content').style.display = 'block'
})
document.getElementById("dropdown").addEventListener('mouseleave',e=>{
	document.getElementById('dropdown-content').style.display = 'none'
})
  </script>